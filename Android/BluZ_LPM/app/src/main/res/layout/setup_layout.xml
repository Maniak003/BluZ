<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setupLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@color/black"
    android:orientation="horizontal"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="right|top"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/labelAPP"
                    android:textAlignment="center"
                    android:textColor="@color/labelTextColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labMAC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/labelMAC"
                        android:textAlignment="center"
                        android:textColor="@color/labelTextColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/textMACADDR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@color/black"
                        android:inputType="text"
                        android:text="@string/defaultMAC"
                        android:textColor="@color/editTextColor"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:text="@string/labelSpecterType"
                        android:textColor="@color/labelTextColor" />

                    <RadioGroup
                        android:id="@+id/rgTypeSpectr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbLine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Line"
                            android:textColor="@color/editTextColor" />

                        <RadioButton
                            android:id="@+id/rbGistogram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gisto"
                            android:textColor="@color/editTextColor" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/specterLinColor"
                        android:textColor="@color/labelTextColor" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3" />

                    <TextView
                        android:id="@+id/tvColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Green" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rbTypeGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/RBLin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/RBLine"
                        android:textColor="@color/editTextColor" />

                    <RadioButton
                        android:id="@+id/RBLg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/RBLog"
                        android:textColor="@color/editTextColor" />

                    <RadioButton
                        android:id="@+id/RBFoneLin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/RBFoneLin"
                        android:textColor="@color/editTextColor" />

                    <RadioButton
                        android:id="@+id/RBFoneLg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/RBFoneLog"
                        android:textColor="@color/editTextColor" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/AColor"
                        android:textColor="@color/labelTextColor" />

                    <SeekBar
                        android:id="@+id/seekBarA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="255"
                        android:min="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/RColor"
                        android:textColor="@color/labelTextColor" />

                    <SeekBar
                        android:id="@+id/seekBarR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:defaultFocusHighlightEnabled="false"
                        android:duplicateParentState="false"
                        android:filterTouchesWhenObscured="false"
                        android:forceHasOverlappingRendering="false"
                        android:max="255"
                        android:min="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/GColor"
                        android:textColor="@color/labelTextColor" />

                    <SeekBar
                        android:id="@+id/seekBarG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="255"
                        android:min="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/BColor"
                        android:textColor="@color/labelTextColor" />

                    <SeekBar
                        android:id="@+id/seekBarB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="255"
                        android:min="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/textSMA"
                        android:textColor="@color/labelTextColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editTextSMAWindow"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:layout_marginBottom="-5dp"
                        android:layout_weight="0"
                        android:ems="10"
                        android:inputType="number"
                        android:text="5"
                        android:textAlignment="center"
                        android:textColor="@color/editTextColor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/textRejectChann"
                        android:textColor="@color/labelTextColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editTextRejectCann"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:ems="10"
                        android:inputType="number"
                        android:text="10"
                        android:textAlignment="center"
                        android:textColor="@color/editTextColor"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />

                    <RadioGroup
                        android:id="@+id/rbSpctType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbBqMon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="BqMon"
                            android:textColor="@color/editTextColor"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/rbSPE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="SPE"
                            android:textColor="@color/editTextColor"
                            android:textSize="12sp" />
                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/labelDEVICE"
                    android:textAlignment="center"
                    android:textColor="@color/labelTextColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/CBsoundKvant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/soundKvant"
                        android:textColor="@color/editTextColor"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/CBledKvant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ledKvant"
                        android:textColor="@color/editTextColor" />

                    <CheckBox
                        android:id="@+id/CBSpectrometer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/autoStart"
                        android:textColor="@color/editTextColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:paddingTop="2dp"
                                android:text="@string/textPolinom"
                                android:textColor="@color/labelTextColor"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="@string/textAlarms"
                                android:textColor="@color/labelTextColor" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="3" />

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="S"
                                android:textAlignment="center"
                                android:textColor="@color/editTextColor"
                                android:textSize="12sp"
                                tools:visibility="visible" />

                            <TextView
                                android:id="@+id/textView24"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="V"
                                android:textAlignment="center"
                                android:textColor="@color/editTextColor"
                                android:textSize="12sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="@string/textPolinomA"
                                android:textColor="@color/labelTextColor" />

                            <EditText
                                android:id="@+id/editPolA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ems="10"
                                android:inputType="numberDecimal|numberSigned"
                                android:textColor="@color/editTextColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/textLevel_1"
                                android:textColor="@color/labelTextColor"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/editLevel1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ems="10"
                                android:inputType="number"
                                android:textColor="@color/editTextColor"
                                android:textSize="14sp" />

                            <CheckBox
                                android:id="@+id/CBSoudLevel1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0" />

                            <CheckBox
                                android:id="@+id/CBVibroLevel1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="@string/textPolinomB"
                                android:textColor="@color/labelTextColor" />

                            <EditText
                                android:id="@+id/editPolB"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:ems="10"
                                android:inputType="numberDecimal|numberSigned"
                                android:textColor="@color/editTextColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/textLevel_2"
                                android:textColor="@color/labelTextColor"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/editLevel2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ems="10"
                                android:inputType="number"
                                android:textColor="@color/editTextColor"
                                android:textSize="14sp" />

                            <CheckBox
                                android:id="@+id/CBSoudLevel2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0" />

                            <CheckBox
                                android:id="@+id/CBVibroLevel2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="@string/textPolinomC"
                                android:textColor="@color/labelTextColor" />

                            <EditText
                                android:id="@+id/editPolC"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:ems="10"
                                android:inputType="numberDecimal|numberSigned"
                                android:textColor="@color/editTextColor"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/textLevel_3"
                                android:textColor="@color/labelTextColor"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/editLevel3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ems="10"
                                android:inputType="number"
                                android:textColor="@color/editTextColor"
                                android:textSize="14sp" />

                            <CheckBox
                                android:id="@+id/CBSoudLevel3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0" />

                            <CheckBox
                                android:id="@+id/CBVibroLevel3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0" />
                        </TableRow>
                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/textResolution"
                        android:textColor="@color/labelTextColor"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/RGResolution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:verticalScrollbarPosition="left">

                        <RadioButton
                            android:id="@+id/RBResol1024"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:layout_marginBottom="-2dp"
                            android:checked="true"
                            android:text="@string/textRes1024"
                            android:textColor="@color/editTextColor" />

                        <RadioButton
                            android:id="@+id/RBResol2048"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:layout_marginBottom="-2dp"
                            android:text="@string/textRes2048"
                            android:textColor="@color/editTextColor" />

                        <RadioButton
                            android:id="@+id/RBResol4096"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:layout_marginBottom="-2dp"
                            android:text="@string/textRes4096"
                            android:textColor="@color/editTextColor" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/textCPS2RH"
                        android:textColor="@color/labelTextColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editCPS2RH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:textColor="@color/editTextColor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/textHVoltage"
                        android:textColor="@color/labelTextColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editHvoltage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ems="10"
                        android:inputType="number"
                        android:textColor="@color/editTextColor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/textComparator"
                        android:textColor="@color/labelTextColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editComparator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ems="10"
                        android:inputType="number"
                        android:textColor="@color/editTextColor"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonSaveSetup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_weight="0"
                android:backgroundTint="@color/buttonColor"
                android:insetLeft="10dp"
                android:text="@string/textSaveSetup"
                android:textAllCaps="false"
                android:textColor="@color/buttonTextColor"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonRestoreSetup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_weight="0"
                android:backgroundTint="@color/buttonColor"
                android:insetLeft="10dp"
                android:text="@string/textRestoreSetup"
                android:textAllCaps="false"
                android:textColor="@color/buttonTextColor"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonScanBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_weight="0"
                android:backgroundTint="@color/buttonColor"
                android:insetLeft="10dp"
                android:text="@string/textScan"
                android:textAllCaps="false"
                android:textColor="@color/buttonTextColor"
